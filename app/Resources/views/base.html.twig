<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome! {% if title is defined %}{{ title }}{% endif %}{% endblock %}</title>
        {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
        {% block stylesheets %}
                <link href="{{ asset('bundles/truckeematch/css/bootstrap.css') }}" rel="stylesheet" />
                <link href="{{ asset('bundles/truckeematch/css/match.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            {% block nav %}
                <div class="navbar navbar-default" role="navigation">
                    <div class="row">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="#"><span class="label label-success">Your org here</span></a>
                        </div>
                        <div class="collapse navbar-collapse">
                            <div class="row">
                                {% spaceless %}
                                    {{ knp_menu_render('TruckeeMatchBundle:Builder:mainMenu') }}{% endspaceless %}
                                </div>
                                {% if app.user is not null %}
                                    {% set type = app.user.userType %}
                                    <div class="row"> 
                                        <div class="collapse navbar-collapse">
                                            <span class="navbar-brand">{{ label_info(type|title~' menu') }} </span>
                                            {% spaceless %}
                                                {{ knp_menu_render('TruckeeMatchBundle:Builder:'~type~'Menu') }}
                                                <p class="navbar-text navbar-right"><a href="#" class="navbar-link">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a></p>
                                                {% endspaceless %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endblock nav %}
                <div class="row">
                    <div class="col-md-6">
                        <h4>{% include 'BraincraftedBootstrapBundle::flash.html.twig' %}</h4>
                    </div>    
                </div>       
                {% block body %}
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}
                {% endblock %}
                {% block javascripts %}
                    <script src="{{ asset('bundles/truckeematch/js/jquery.js') }}"></script>
                    <script src="{{ asset('bundles/truckeematch/js/jquery-ui.min.js') }}"></script>
                    <script src="{{ asset('bundles/truckeematch/js/volunteer.js') }}"></script>
                    <script src="{{ asset('bundles/truckeematch/js/bootstrap.js') }}"></script>
                {% endblock %}
            </div>
        </body>
    </html>
