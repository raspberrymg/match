{% extends 'base.html.twig' %}

{% block body %}
    <h4> {{ label_info(organization.orgName~': '~method~' opportunity') }}</h4>
    {% set submit = 1 %}
    
    <form name="opportunity" method="post" action="" class="form-inline">
        {{ form_widget(form._token) }}
            {{ bootstrap_set_style('form-inline') }}
        <div class="row">
            <div class="container">
                    <div style="vertical-align: top; float: left;">
                    {{ form_row(form.active) }}
                    {{ form_row(form.oppName) }}
                </div>
                <div style="float: left; margin-left: 10px;">
                    {{ form_row(form.description) }}
                </div>
            </div>
        </div>
        <div class="row">
            <br/>
        </div>
        <div class="row">
            <div class="container">
                <div style="vertical-align: top; float: left;">
                    {{ form_row(form.expireDate) }}
                </div>
                <div style="vertical-align: top; float: left; margin-left: 10px;">
                    {{ form_row(form.minage) }}
                </div>
                <div style="vertical-align: top; float: left; margin-left: 10px;">
                    {{ form_row(form.groupOk) }}
                </div>
            </div>
        </div>
        <div class="row">
            <br/>
        </div>
        <fieldset>
        {% if form.skills is defined %}
            {% if form.skills is empty %}
                {# do not submit form if skill criteria empty #}
                {% set submit = 0 %}
            {% endif %}
            {{ form_row(form.skills) }}
        {% endif %}
            {{ bootstrap_set_style('') }}
        </fieldset>
        {% if submit == 1 %}
            {{ form_widget(form.save) }}
        {% endif %}
    </form>
{% endblock %}
