{# src/Truckee/MatchBundle/Resources/views/Organization/orgForm.html.twig #}
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.orgName) }} {% if form.vars.value.addDate is defined %}
          Added: {{ form.vars.value.addDate|date('m/d/Y') }}{% endif %}
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.address) }}
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        {{ form_row(form.city) }}
        {{ form_row(form.state) }}
        {{ form_row(form.zip) }}
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        {{ form_row(form.areacode) }}
        {{ form_row(form.phone) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.email) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="input-group">
            <div class="input-group-addon">http://</div>
            {{ form_row(form.website) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.background) }}
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        {{ form_row(form.focuses) }}
    </div>
</div>
