<div class="row">
    <div class="col-md-5">
        {{ form_errors(form) }}
        {%if form._token is defined %}{{ form_widget(form._token) }}{% endif %}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.plainPassword.second) }}
    </div>
</div>
    <p>[At least six characters: one upper, one lower, one numerical]</p>
